<head>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</head>

<body>

        <div class="text-center">  
        <h2>{{title}}</h2> 
      </div>
            <div class="container">
              <div class="row">  
                <div class="col-md-4">
                <p class="profile">LOGGED IN AS: {{ username }}</p>
             </div>
             <div class="col-md-8 text-right">
                 <a href="/logout" class="nav-link">LOGOUT</a>
             </div>
          </div>
           
                <div class="row">
                     {{#if product}}
                    <div class="col-md-6 offset-md-3">
                        <div class="card" style="">
                           
                                <img src="../images/{{product.filename}}" class="card-img-top" ">
                                <div class="card-body">
                                <h5 class="card-title" style="color:orange">${{product.price}}</h5>
                                <p class="card-text">{{product.description}}</p>
                            
                          </div>
                          <div class="row">
                            <div class="col-md-6">
                               
                                   
                                    <button type="submit" name="submit" class="btn btn-success btn-block" data-toggle="modal" data-target="#buy">BUY</button>
                              
                            </div>
                            <div class="col-md-6">
                              
                                   <input type="submit" name="submit" class="btn btn-info btn-block" value="Cancel" data-toggle="modal" data-target="#cancel">
                               
                            </div>
                        </div>
                        </div>
                        
                       
                         
                    </div>
                    {{/if}}
                </div>
                 
            </div>


            <div class="modal" tabindex="-1" role="dialog" id="buy">
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title">Sold</h5>
                   
                  </div>
                  <div class="modal-body">
                    <p>Product sold</p>
                  </div>
                  <div class="modal-footer">
                   
                   <form method="post" action="/buy"> 
                     <input type="hidden" name="productId" value="{{product._id}}">
                    <input type="submit" class="btn btn-primary" value="OK">
                   </form>
                  </div>
                </div>
              </div>
            </div>

            <div class="modal" tabindex="-1" role="dialog" id="cancel">
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body">
                    <p>Thanks may be next time</p>
                  </div>
                  <div class="modal-footer">
                   
                   <form method="post" action="/cancel"> 
                     
                    <input type="submit" class="btn btn-primary" value="OK">
                   </form>
                  </div>
                </div>
              </div>
            </div>

</body>
